<div class="pirate">
  <h2>Your Pirate</h2>
  <h3>Name: <%= @pirate.name %></h3>
  <h3>Height: <%= @pirate.height %></h3>
  <h3>Weight: <%= @pirate.weight %></h3>
</div>

<h2><%= @pirate.name %>'s Ships</h2>

<% @ships.each do |ship| %>
  <div class="ship">
    <h3>Name: <%= ship.name %></h3>
    <h3>Height: <%= ship.type %></h3>
    <h3>Weight: <%= ship.booty %></h3>
  </div>
<% end %>
